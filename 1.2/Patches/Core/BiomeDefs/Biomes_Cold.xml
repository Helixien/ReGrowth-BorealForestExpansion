<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="Tundra"]/wildPlants</xpath>
                    <value>
                        <RG-BF_Plant_BlueTreePine>0.04</RG-BF_Plant_BlueTreePine>
						<RG-BF_Plant_BorealFern>1.0</RG-BF_Plant_BorealFern>
                        <RG-BF_Plant_LargeTreePine>0.02</RG-BF_Plant_LargeTreePine>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="ColdBog"]/wildPlants</xpath>
                    <value>
                        <RG-BF_Plant_RimReed>0.2</RG-BF_Plant_RimReed>
						<RG-BF_Plant_BorealFern>1.0</RG-BF_Plant_BorealFern>
                        <RG-BF_Plant_LargeTreePine>0.01</RG-BF_Plant_LargeTreePine>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="BorealForest"]/wildPlants</xpath>
                    <value>
                        <RG-BF_Plant_RimReed>0.6</RG-BF_Plant_RimReed>
						<RG-BF_Plant_BorealFern>2.0</RG-BF_Plant_BorealFern>
                        <RG-BF_Plant_BlueTreePine>0.8</RG-BF_Plant_BlueTreePine>
                        <RG-BF_Plant_LargeTreePine>0.4</RG-BF_Plant_LargeTreePine>
                        <RG-BF_Potokus>0.05</RG-BF_Potokus>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>